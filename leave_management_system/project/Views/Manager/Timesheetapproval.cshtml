@using EmployeeTimesheet;
@model IEnumerable<Timesheet>

 <a class="btn btn-primary mb-3" asp-action="Managerdashboard" asp-controller="Manager">Back to Daashboard</a>

<table class="table table-dark table-striped" style="margin-top:50px" id="leavetable">
<thead>
    <tr>
        <td>Timesheet id</td>
        <td>username</td>
        <td>project title</td>
        <td>Totalhoursworked</td>
        <td>status</td>
        
    </tr>
</thead>
<tbody class="table-secondary">
    @foreach(var sheet in Model)
    {
        <tr>
            <td>@sheet.TimesheetId</td>
            <td>@sheet.username</td>
            <td>@sheet.projectname</td>
            <td>@sheet.Totalhoursworked</td>
            <td><a class="btn btn-primary" asp-action="Approve" asp-controller="Manager" asp-route-id="@sheet.TimesheetId" asp-route-status="Approve">Approve</a>&nbsp;
            <a class="btn btn-primary"asp-action="Approve" asp-controller="Manager" asp-route-id="@sheet.TimesheetId" asp-route-status="Denie" >Denie</a></td>

        </tr>
    }
</tbody>
</table>
<style>
.track-line {
height: 2px !important;
background-color: #488978;
opacity: 1;
}

.dot {
height: 10px;
