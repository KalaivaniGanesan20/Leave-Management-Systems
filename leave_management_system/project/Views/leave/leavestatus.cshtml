@using Leavestatus;
@model IEnumerable<LeavestatusTracker>
<style>
   .track-line {
height: 2px !important;
background-color: #488978;
opacity: 1;
}

.dot {
height: 10px;
width: 10px;
margin-left: 3px;
margin-right: 3px;
margin-top: 0px;
background-color: #488978;
border-radius: 50%;
display: inline-block
}

.big-dot {
height: 25px;
width: 25px;
margin-left: 0px;
margin-right: 0px;
margin-top: 0px;
background-color: #488978;
border-radius: 50%;
display: inline-block;
}

.big-dot i {
font-size: 12px;
}

.card-stepper {
z-index: 0
}
</style>
<a type="submit" class="btn btn-primary mb-3 w-25" asp-action="user" asp-controller="Login">back to dashboard</a>

<section class="vh-50" style="background-color: #eee; margin-top:50px;">
  <div class="container py-5 h-50">
    <div class="row d-flex justify-content-center align-items-center h-50">
      <div class="col">
        <div class="card card-stepper" style="border-radius: 10px;">
          <div class="card-body p-4">

            <div class="d-flex justify-content-between align-items-center">
              <div class="d-flex flex-column">
                @foreach(var i in Model)
                  {
                    <span class="lead fw-normal">Leave status id : @i.statusid</span>
                  }
              </div>
            </div>
            <hr class="my-4">

            <div class="d-flex flex-row justify-content-between align-items-center align-content-center">
              <span class="dot"></span>
              <hr class="flex-fill track-line"><span class="dot"></span>
              <hr class="flex-fill track-line"><span
                class="d-flex justify-content-center align-items-center big-dot dot">
                <i class="fa fa-check text-white"></i></span>
            </div>

            <div class="d-flex flex-row justify-content-between align-items-center">
              <div class="d-flex flex-column align-items-start"><span>Leave applied</span>
              </div>
               @if(Model.Count()<=0)
                  {
                 <div class="d-flex flex-column align-items-center"><span>waiting for approval</span></div>
                  <div class="d-flex flex-column align-items-end"><span>Not yet approved</span></div>
                  }
                   else
                 {
                  @foreach(var i in Model)
                  {
                    @if(i.name=="admincontroller.ManagerController.Approved (project)")
                    {
              <div class="d-flex flex-column align-items-end"><span>Leave approved</span><span>@i.date</span></div>
                    }
                    else
                    {
              <div class="d-flex flex-column align-items-end"><span>Leave Denied</span><span>@i.date</span></div>

                    }
                  }
                 }
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>

