@using leave.Models.Domain;
@model Leaves;
@{
   var name=ViewContext.HttpContext.Session.GetString("name");
   var role=ViewContext.HttpContext.Session.GetString("role");
   var id=ViewContext.HttpContext.Session.GetInt32("ID");
}

<body>
<h1>hi @name </h1>
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
  <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
  </symbol>
  <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </symbol>
</svg>
<div id="leaveContainer"> 
  <form class="row g-5"  method="post">
  <div class="col-md-5">
    <label for="validationCustom01" asp-for="username" >username</label>
    <input  asp-for="username" value=@name type="text" class="form-control" id="username">
    <span asp-validation-for="username" class="text-danger"></span>
  </div>
  <div class="col-md-5">
        <label for="validationCustom01" asp-for="EmployeeId" >Employee id</label>
       <input type="text"  asp-for="EmployeeId" value="@id" type="text" class="form-control" id="id" >
        <span asp-validation-for="EmployeeId" class="text-danger"></span>

  </div>
   <div class="col-md-5">
        <label for="validationCustom01" asp-for="userRole">user Role</label>
       <input type="text" asp-for="userRole" value=@role class="form-control" id="role">
        <span asp-validation-for="userRole" class="text-danger"></span>

  </div>

  <div class="col-md-5">
        <label for="validationCustom01"  asp-for="leavetype" >Leave Type</label>
       <input  tpe="text" asp-for="leavetype" type="text" class="form-control" id="validationCustom02">
           <span asp-validation-for="leavetype" class="text-danger"></span>

  </div>
  <div class="col-md-5">
        <label for="validationCustom01"  asp-for="leaveFrom" >leaveFrom</label>
       <input tpe="text"asp-for="leaveFrom" type="date" class="form-control" id="leaveFrom">
            <span asp-validation-for="leaveFrom" class="text-danger"></span>

  </div>
  <div class="col-md-5">
        <label for="validationCustom01"  asp-for="leaveTo" >leaveTo</label>
       <input tpe="text"asp-for="leaveTo" type="date" class="form-control" id="leaveTo">
        <span asp-validation-for="leaveTo" class="text-danger"></span>

  </div>
  <div class="col-md-5">
        <label for="validationCustom01"  asp-for="Numberofdays" >NumberofDays</label>
       <input tpe="text"asp-for="Numberofdays" type="text" class="form-control" id="Numberofdays">
        <span asp-validation-for="Numberofdays" class="text-danger"></span>

  </div>
   <div class="col-md-10">
        <label for="validationCustom01" asp-for="leaveReason">Leave Reason</label>
       <textarea type="text" rows="5" asp-for="leaveReason" type="text" class="form-control" id="validationCustom02"></textarea>
        <span asp-validation-for="leaveReason" class="text-danger"></span>
 
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary mb-3">Apply Leave</button>
  </div>
</form>
  </div>

<div class="row" style="margin-top:10px; margin-left:10%">
   <a type="submit" class="btn btn-primary mb-3 w-25" asp-action="leavebalance" asp-controller="leave" asp-route-id="@name">back to dashboard</a>
</div>
</body>
<script>
  var fromDateInput = document.getElementById("leaveFrom");
var toDateInput = document.getElementById("leaveTo");
var daysInput = document.getElementById("Numberofdays");

fromDateInput.addEventListener("input", updateNumberOfDays);
toDateInput.addEventListener("input", updateNumberOfDays);

function updateNumberOfDays() {
  var fromDate = new Date(fromDateInput.value);
  var toDate = new Date(toDateInput.value);
    var timeDiff = toDate.getTime() - fromDate.getTime();
    var days = Math.ceil(timeDiff / (1000 * 3600 * 24));
    daysInput.value = days;
}

</script>
 